.devise
  .row.justify-content-center
    .col-lg-5.col-md-6.col-sm-8.col-xs-10
      .card
        .card-header
          %h1.text-center Sign up
        .card-body
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .form-group.row
              = f.label :email, class: 'col-sm-4 col-xs-6'
              .col-sm-8.col-xs-6
                = f.email_field :email, autofocus: true, class: 'form-control'
            .form-group.row
              = f.label :password, class: 'col-sm-4 col-xs-6'
              .col-sm-8.col-xs-6
                = f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum", class: 'form-control'
            .form-group.row
              = f.label :password_confirmation, class: 'col-sm-4 col-xs-6'
              .col-sm-8.col-xs-6
                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
            .actions.text-center
              = f.submit "Sign up", class: 'btn btn-sm btn-outline-light'
        .card-footer
          = render "users/shared/links"